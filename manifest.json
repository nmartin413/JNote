{
	"manifest_version": 2,
	"name": "JNote: JavaScript Error Notifier",
	"description": "JavaScript Error Notifier",
	"version": "1.0.4",

  "icons": {
      "16": "icon/16.png",
      "48": "icon/48.png",
      "128": "icon/128.png"
    },

  	"permissions": [
      "tabs",
      "notifications",
      "<all_urls>"
    ],

    "page_action": {
      "default_title": "JNote",
      "default_popup": "popups/pageAction.html"
    },

    "options_page": "options/index.html",

  	"background": {
  		"scripts": [
        "underscore.js",

        "core/jnote.js",
        "core/config.js",

        "notifiers/chrome.js",
        "notifiers/webkit.js",

        "model/error.js",
        "model/errorCollection.js",
        
        "pageAction.js",
  			"background.js"
  		]
  	},

    "web_accessible_resources": [
      "bang_128.png",
      "bang_red_48.png",
      "bang_red_19_sharp.png"
    ],

  	"content_scripts": [
	    {
	      "matches": ["http://*/*", "https://*/*"],
	      "js": ["content.js"],
	      "run_at": "document_start"
	    }
  	]
}